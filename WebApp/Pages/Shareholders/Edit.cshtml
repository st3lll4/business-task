@model WebApp.Pages.Shareholders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shareholder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="Shareholder.PersonId" class="control-label"></label>
                <select asp-for="Shareholder.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Shareholder.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Shareholder.ShareholderBusinessId" class="control-label"></label>
                <select asp-for="Shareholder.ShareholderBusinessId" class="form-control" asp-items="ViewBag.ShareholderBusinessId"></select>
                <span asp-validation-for="Shareholder.ShareholderBusinessId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Shareholder.ShareholderTypeId" class="control-label"></label>
                <select asp-for="Shareholder.ShareholderTypeId" class="form-control" asp-items="ViewBag.ShareholderTypeId"></select>
                <span asp-validation-for="Shareholder.ShareholderTypeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Shareholder.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

