@model WebApp.Pages.ShareholdersInBusiness.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShareholderInBusiness[0].IsFounder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShareholderInBusiness[0].ShareCapital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShareholderInBusiness[0].Business)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShareholderInBusiness[0].Shareholder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ShareholderInBusiness) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsFounder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShareCapital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Business!.BusinessName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shareholder!.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
